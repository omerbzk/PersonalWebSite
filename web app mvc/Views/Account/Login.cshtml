@model LoginViewModel
@{
	ViewData["Title"] = "Login";
}

<div class="row">
	<div class="col-4 offset-4">
	<h1 class="display-4 border-bottom text-center pb-2">@ViewData["Title"]</h1>
	</div>
</div>

<div class="row">
	<div class="col-4 offset-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger small"></div>

			<div class="form-group mb-3"> 
				<label asp-for="Username" class="form-label">Username</label>
				<input asp-for="Username" class="form-control" placeholder="Please enter a username"/>
				<span asp-validation-for="Username" class="text-danger small"> </span>
			</div>
			<div class="form-group mb-3">
				<label asp-for="Password" class="form-label">Password</label>
				<input asp-for="Password" class="form-control" placeholder="Please enter a password"/>
				<span asp-validation-for="Password" class="text-danger small"> </span> @*Bunların yeşil renk olmasının sebebi Tag Helper olmalarıdır. Html değildir.*@
			</div>
			<div class="form-group d-grid mb-3 ">
				<button  type="Submit" class="btn btn-primary d-block"><i class="fa-sharp fa-solid fa-right-to-bracket me-2"></i>Login</button>
			</div>
		</form>
	</div>
</div>
